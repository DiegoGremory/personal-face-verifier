# Configuración de la aplicación
# Este archivo contiene las variables de entorno necesarias para ejecutar el proyecto.
# Copiar este archivo a .env y ajustar los valores según sea necesario.

# Flask
FLASK_APP=api.app
FLASK_ENV=development
FLASK_DEBUG=1

# API Configuration
API_HOST=0.0.0.0
API_PORT=5000

# Model Configuration
MODEL_PATH=models/model.joblib
SCALER_PATH=models/scaler.joblib

# Data Directories
DATA_ME_DIR=data/me
DATA_NOT_ME_DIR=data/not_me
DATA_CROPPED_DIR=data/cropped

# Training Configuration
TRAIN_TEST_SPLIT=0.2
MODEL_TYPE=svm

# Gunicorn Configuration (Producción)
GUNICORN_WORKERS=4
GUNICORN_TIMEOUT=120
GUNICORN_BIND=0.0.0.0:5000

# Logging
LOG_LEVEL=INFO
THRESHOLD=0.95